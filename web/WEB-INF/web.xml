<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>UNIFY</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>SortProduct</servlet-name>
        <servlet-class>controller.SortProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>HistoryController</servlet-name>
        <servlet-class>controller.HistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryListController</servlet-name>
        <servlet-class>controller.admin.CategoryListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCategoryController</servlet-name>
        <servlet-class>controller.admin.AddCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActiveUserController</servlet-name>
        <servlet-class>controller.admin.ActiveUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartAddController</servlet-name>
        <servlet-class>controller.CartAddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SortProduct</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryController</servlet-name>
        <url-pattern>/member/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryListController</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCategoryController</servlet-name>
        <url-pattern>/admin/category/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActiveUserController</servlet-name>
        <url-pattern>/admin/user/active</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartAddController</servlet-name>
        <url-pattern>/member/cart/add</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>
</web-app>
